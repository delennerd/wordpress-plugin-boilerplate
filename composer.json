{
    "name": "delennerdmedia/wordpress-plugin-boilerplate",
    "description": "A small boilerplate for WordPress Plugins",
    "authors": [
        {
            "name": "delennerd.media",
            "email": "mail@delennerd.de"
        }
    ],
    "scripts": {
		"check:cs": ["@php ./vendor/squizlabs/php_codesniffer/bin/phpcs"],
		"fix:cs": ["@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf"],
		"lint:php": ["@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor ."],
		"test": "@php ./vendor/phpunit/phpunit/phpunit"
	},
    "autoload": {
        "psr-4": {
            "PluginName\\": "app/"
        }
    },
    "require": {
        "composer/installers": "^2.1",
        "htmlburger/carbon-fields": "^3.3"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^1.0"
    }
}
